<script>
var socket = io.connect('http://detect.herokuapp.com');
//var socket = io.connect('http://localhost:3000');

socket.on('connect',function(data){
		if(!connected){
			connected = 1;
			socket.emit('joinRoom');
		}
		socket.on('opponentReady',function(data){
			setOpponentReady();
		});
		

		socket.on('opponentLocation',function(data){
			setOpponent(data.bodyX,data.bodyY,data.frontX,data.frontY);
			addProjectiles(data.ids, data.projectiles);
		});
});

function ready(){
	socket.emit('ready');
	startGame();
}

function sendPosition(){
	var tempProj = [];
	var tempId = [];
	var index;
	for(index = 0;index < getProjectiles().length;index++){
		tempProj.push(getProjectiles()[index] * -1);
	}
	for(index = 0;index < getIds().length;index++){
		tempId.push(getIds()[index] * -1);
	}
	socket.emit('myLocation',{
		bodyX: getBodyX(),
		bodyY: getBodyY(),
		frontX: getFrontX(),
		frontY: getFrontY(),
		projectiles: tempProj,
		ids: tempId
	});
}
</script>

<h1>Detect</h1>

<button class="btn btn-primary" onClick="ready();">Start</button>
<br><br>
<div id="game"></div>